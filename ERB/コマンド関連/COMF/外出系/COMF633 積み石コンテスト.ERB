@Stone_Entry(Rank, MaxBattle, Prize)
#DIM Rank
#DIM MaxBattle
#DIM Prize
#DIM WIN_P
#DIM difficulty
WIN_P = 0
difficulty = Rank
IF !TALENT:MASTER:積み石ランカー == 6 && MONEY < 3000
	PRINTFORMW 「あの……お金が足りないみたいなんですけど……」
	STONE_PLAYCOUNT:1 -= 50
	IF STONE_PLAYCOUNT:2 >= 14
		PRINTFORMW 「ほーんとしょーがない人%UNICODE(0x2764)%わたしが代わりに払ってあげますよ%UNICODE(0x2764)%」
	ELSEIF STONE_PLAYCOUNT:2 >= 5
		PRINTFORMW 「……しょうがない人なのです。友達のよしみでわたしが代わりに払ってあげますよ」
	ELSE
		PRINTFORMW 「はぁ……今回だけは特別にやらせてあげますが今回だけですからね？」
	ENDIF
ENDIF

SIF !TALENT:MASTER:積み石ランカー == 6 && MONEY < 3000
	MONEY -= 3000

	
;持ち込み道具
CALL STONE_MOCHIKOMI

FOR WIN_P, 0, MaxBattle
	IF WIN_P > 0
		STONE_PLAYCOUNT:1 += 1
		STONE_BATTLECOUNT:0 += 1
		STONE_BATTLECOUNT:1 += 1
		PRINTFORMW
		IF TALENT:MASTER:積み石ランカー == 6
			PRINTFORMW 「{WIN_P}戦目勝利祝贺您！っ！ここで放棄こともできますけど…どうします？」
		ELSE
			PRINTFORMW 「{WIN_P}戦目勝利祝贺您！っ！ここで放棄こともできますけどどうします？参加費分は戻って来ますが…」
		ENDIF
		CALL ASK_YN("继続","放棄")
		IF RESULT
			PRINTFORMW 「そっか…またのご参加お待ちしてまーす！」
			SIF !TALENT:MASTER:積み石ランカー == 6 && MONEY < 3000
			MONEY += 3000
			CALL STONE_UKETSUKE
			TIME += 50
			RETURN -1
		ELSE
			PRINTFORMW 「そうこなくっちゃです！」
		ENDIF
	ENDIF
	PRINTFORMW 「那么…第{WIN_P + 1}回戦的对手是…」
	CALL STONELEVEL(difficulty)
	IF RESULT == 1
		PRINTFORMW 「負けたのでここで終わりです……お疲れ様でした…またのご参加お待ちしてます！」
		STONE_BATTLECOUNT:0 += 1
		CALL STONE_UKETSUKE
		TIME += 50
		RETURN 0
	ELSE
		difficulty ++
	ENDIF
NEXT

PRINTFORMW 「優勝祝贺您！っ！賞金の￥{Prize}をどうぞですっ！」
