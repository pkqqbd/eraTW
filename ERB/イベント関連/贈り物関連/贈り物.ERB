		SENSE += ARGS:1 + "原創/"
		GIFT_GAVE_ORI_ADJECT:CHARA:(渡した回数 % 100) = %GIFTNAME_ADJECT%
	ENDIF
ENDIF

;値段の設定（意味はない）
RESULT:1 = BASIC_PRICE * MAGNIF_PRICE / 100
