	FOR LOCAL, 11, 550
		CALL GIFTDATA_MAIN(LOCAL)
		IF RESULTS == ARGS:2
			MAIN = LOCAL
			BREAK
		ENDIF
	NEXT
	IF MAIN
		CALL GIFTDATA_MAIN(MAIN)
		BASIC_PRICE = RESULT:1
		GIFTNAME_MAIN = %RESULTS:0%
		SENSE += RESULTS:1
