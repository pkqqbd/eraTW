;戦闘能力を上げれば戦えるはず！
;==================================================
;弾幕勝負
;==================================================
;
@M_KOJO_MESSAGE_COM_K127_DANMAKU(ARGS, 相手残機)
#DIM 相手残機
;全体の流れ
;①【戦闘前】→②骰子ロールとプレイヤー選択肢、ハンデをつけた場合は【ハンデ口上】→③対応スキルが発動した場合【スキル口上】→④被弾判定、角色が被弾したなら【被弾口上】→
;どちらかの残機が0になっていなければ②に返回→⑤【戦闘後口上】

;--------------------------------------------------
;記入チェック（=0, 非表示、1, 表示）
LOCAL = 1
;-------------
IF LOCAL
	SIF FLAG:口上色
		TRYCALLFORM M_KOJO_COLOR_K{NO:TARGET}
	;-------------------------------------------------
	;小分岐
	;-------------------------------------------------
	;戦闘前
	HANDICAP_FIXED = 0
	HANDICAP_RAND = 0
	;ハンデをつけることができ、数値が大きいほど你が不利になる　数値が負なら你が有利に
	;角色の能力に関わらずクッソ強くしたり弱くしたりできる
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘前"
		IF ALCOHOL_FACE(127) == "酔酒" || ALCOHOL_FACE(127) == "不省人事"
			PRINTFORMW 「え～？弾幕ごっこするの～？」
		ELSEIF TALENT:127:心情 == -1 || CFLAG:127:ブチギレ || MARK:127:反発刻印 >= 3
			PRINTFORMW 「石を積むことを馬鹿にしたなー！許さん、死ねい！」
		ELSE
			SELECTCASE RAND:3
			CASE 1
				PRINTFORMW 「積み石ほど得意じゃないんだけど…」
			CASE 2
				PRINTFORMW 「積み石弾幕を見せてあげる！」
			CASEELSE
				PRINTFORMW 「石は当たると痛いんだよ。なめてかかると痛い目見るからね！」
			ENDSELECT
		ENDIF
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;ハンデ
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "ハンデ"
		;ハンデつけなかったら表示されないので無記入でよい
		PRINTFORML 
		RETURN 0
	ENDIF
	;-------------------------------------------------
	;戦闘中TARGET被弾時口上
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "被弾" 
		IF 相手残機 == 0
			IF ALCOHOL_FACE(127) == "酔酒" || ALCOHOL_FACE(127) == "不省人事"
				PRINTFORML 「いっっった～い！」
			ELSEIF TALENT:127:心情 == -1 || CFLAG:127:ブチギレ || MARK:127:反発刻印 >= 3
				PRINTFORML 「しくしくしく……」
			ELSE
				SELECTCASE RAND:2
				CASE 1
					PRINTFORML 「いたた…涙が止まらない…」
				CASEELSE
					PRINTFORML 「つ…強い…」
				ENDSELECT
			ENDIF
		ELSE
			IF ALCOHOL_FACE(127) == "酔酒" || ALCOHOL_FACE(127) == "不省人事"
				SELECTCASE RAND:3
				CASE 1
					PRINTFORML 「うぎゃ！？」
				CASE 2
					PRINTFORML 「あうっ！？」
				CASEELSE
					PRINTFORML 「いっったーい！」
				ENDSELECT
			ELSEIF TALENT:127:心情 == -1 || CFLAG:127:ブチギレ || MARK:127:反発刻印 >= 3
				SELECTCASE RAND:3
				CASE 1
					PRINTFORML 「ぐぐぐ……」
				CASE 2
					PRINTFORML 「酷い……」
				CASEELSE
					PRINTFORML 「ううっ……」
				ENDSELECT
			ELSE
				SELECTCASE RAND:7
				CASE 1
					PRINTFORML 「あっ！」
				CASE 2
					PRINTFORML 「いてっ！」
				CASE 3
					PRINTFORML 「いたたっ！」
				CASE 4
					PRINTFORML 「うわぁっ！」
				CASE 5
					PRINTFORML 「きゃっ！」
				CASE 6
					PRINTFORML 「きゃぁっ！」
				CASEELSE
					PRINTFORML 「わっ！」
				ENDSELECT
			ENDIF
		ENDIF
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【残忍酷薄】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "残忍酷薄"
		
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【乾坤一擲】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "乾坤一擲"
		
	ENDIF
	;-------------------------------------------------
	;戦闘中
	;TARGETの【怪力乱神】発動時
	;ARGはTARGETの残機
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 0
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "怪力乱神"
		
	ENDIF
	
	;-------------------------------------------------
	;戦闘後
	;記入チェック（=0, 非表示、1, 表示）
	LOCAL:1 = 1
	;-------------------------------------------------
	IF LOCAL:1 && ARGS == "戦闘後" 
		PRINTFORML 
		;残り残機4が表示されうるのは【洽覧深識】持ちのみ
		;残機が1以上なら你の負け、0の場合は你の勝利
		;你勝利
		IF 相手残機 == 0
			IF ALCOHOL_FACE(127) == "酔酒" || ALCOHOL_FACE(127) == "不省人事"
				PRINTFORMW 「ん～？ もしかしてわたしのまけ～？」
			ELSEIF TALENT:127:心情 == -1 || CFLAG:127:ブチギレ || MARK:127:反発刻印 >= 3
				PRINTFORMW 「道歉のが先じゃないの？」
			ELSE
				IF TALENT:127:恋慕
					SELECTCASE RAND:3
					CASE 1
						PRINTFORMW 「%CALLNAME:MASTER%は鬼より強いもんね！」
					CASE 2
						PRINTFORMW 「ぐぐぐ…%CALLNAME:MASTER%は流石に強いね」
					CASEELSE
						PRINTFORMW 「よし！戦いは終わったし次は一緒に積み石の時間ね！」
					ENDSELECT
				ELSEIF TALENT:127:思慕
					SELECTCASE RAND:3
					CASE 1
						PRINTFORMW 「つ、次は負けない！…たぶん」
					CASE 2
						PRINTFORMW 「今日は積み石じゃなくて弾幕勝負の特訓もありかなあ」
					CASEELSE
						PRINTFORMW 「積み石勝負なら勝てるのに！」
					ENDSELECT
				ELSE
					SELECTCASE RAND:3
					CASE 1
						PRINTFORMW 「強すぎる……」
					CASE 2
						PRINTFORMW 「鬼のような強さだ……」
					CASEELSE
						PRINTFORMW 「ぐぐぐ…やられた…」
					ENDSELECT
				ENDIF
			ENDIF
		ELSE
			IF ALCOHOL_FACE(127) == "酔酒" || ALCOHOL_FACE(127) == "不省人事"
				PRINTFORML 「んん～？ まさか%CALLNAME:MASTER%がまけるの～？」
			ELSEIF TALENT:127:心情 == -1 || CFLAG:127:ブチギレ || MARK:127:反発刻印 >= 3
				PRINTFORML 「勝利よ！ すっきりした！」
			ELSE
				IF TALENT:127:恋慕
					SELECTCASE RAND:2
					CASE 1
						PRINTFORMW 「那个れ？%CALLNAME:MASTER%に勝つなんて」
					CASEELSE
						PRINTFORMW 「私が勝ったんだから今日は一緒に積み石しようよ！」
					ENDSELECT
				ELSEIF TALENT:127:思慕
					SELECTCASE RAND:2
					CASE 1
						PRINTFORMW 「那个れ？%CALLNAME:MASTER%弱くなった？」
					CASEELSE
						PRINTFORMW 「勝ち！今度一緒に積み石しようよ」
					ENDSELECT
				ELSE
					SELECTCASE RAND:2
					CASE 1
						PRINTFORMW 「那个れ…？石積み水子に負けるってどうなの？」
					CASEELSE
						PRINTFORMW 「石の強さ思い知ったかっ！」
					ENDSELECT
				ENDIF
				TALENT:127:心情 = 1
			ENDIF
		ENDIF
	ENDIF
RESETCOLOR
ENDIF
RETURN 1

